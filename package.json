{
  "name": "sw_app",
  "version": "0.0.1",
  "private": true,
  "engines": {
    "node": "8.x",
    "npm": "4.x"
  },
  "scripts": {
    "postinstall": "npm run build",
    "start": "node server.js",
    "start:dev": "DEBUG=sw_app* node-dev server.js",
    "build": "npm run babel && npm run browserify && npm run sass && gulp build && gulp serviceworker",
    "babel": "./node_modules/.bin/babel src/ --out-dir build/ --source-maps inline",
    "sass": "node-sass src/client/css/app.scss --include-path ./node_modules/bootstrap-sass/assets/stylesheets --include-path ./node_modules/font-awesome/scss --include-path ./node_modules/highlight.js/styles --output-style compressed -o public/css/",
    "test": "standard",
    "browserify": "browserify --verbose -t [ babelify ] -g uglifyify src/client/js/index.js -o public/index.js",
    "watch": "./node_modules/.bin/run-p watch:**",
    "watch:babel": "npm run babel -- --watch",
    "watch:watchify": "./node_modules/.bin/watchify --verbose --debug -t [ babelify ] -p browserify-notify src/client/js/index.js -o public/index.js",
    "watch:sass": "./node_modules/.bin/chokidar 'src/client/css/**/*.scss' -c 'npm run sass -- --source-map-embed' --initial",
    "watch:landing:sass": "chokidar 'src/client/css/**/*.scss' -c 'npm run sass -- --source-map-embed' --initial",
    "watch:gulp": "./node_modules/.bin/gulp watch",
    "clean": "gulp clean"
  },
  "devDependencies": {
    "babel-eslint": "^6.1.2",
    "browserify-notify": "^1.1.2",
    "chokidar-cli": "^1.2.0",
    "node-dev": "^3.1.3",
    "npm-run-all": "^4.0.2",
    "standard": "^7.1.2",
    "watchify": "^3.9.0"
  },
  "dependencies": {
    "babel-cli": "^6.24.1",
    "babel-polyfill": "^6.23.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "babel-regenerator-runtime": "^6.5.0",
    "babelify": "^7.3.0",
    "bootstrap": "^3.3.7",
    "bootstrap-sass": "^3.3.7",
    "browserify": "^13.1.0",
    "browserify-shim": "^3.8.14",
    "del": "^2.2.2",
    "ejs": "^2.5.6",
    "express": "^4.15.3",
    "font-awesome": "^4.6.3",
    "glob-promise": "^1.0.6",
    "gulp": "^3.9.1",
    "gulp-environments": "^0.1.2",
    "gulp-iconfont": "^8.0.1",
    "gulp-iconfont-css": "^2.1.0",
    "gulp-replace": "^0.5.4",
    "highlight.js": "^9.12.0",
    "node-sass": "^3.8.0",
    "uglifyify": "^3.0.2"
  },
  "standard": {
    "parser": "babel-eslint",
    "ignore": [
      "/build",
      "/public"
    ]
  }
}
